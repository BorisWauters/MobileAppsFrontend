<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="137dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="300dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="136dp"/>
    <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="103dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="103dp"/>
    <Button
            android:id="@+id/sign_out_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sign_out"
            android:theme="@style/ThemeOverlay.MyDarkButton"
            android:layout_marginBottom="112dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
    />

    <Button
            android:id="@+id/disconnect_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/disconnect"
            android:theme="@style/ThemeOverlay.MyDarkButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginBottom="112dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
            android:text="Email and Password"
            android:layout_width="180dp"
            android:layout_height="51dp"
            android:id="@+id/login_buttonEmail" android:layout_marginEnd="103dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="103dp"
            android:background="@drawable/button"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="26dp" app:layout_constraintBottom_toTopOf="@+id/sign_out_button"
            style="@style/Widget.AppCompat.Button"
            android:elevation="10dp"/>

</android.support.constraint.ConstraintLayout>